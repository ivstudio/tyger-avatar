{
	"compilerOptions": {
		"noEmit": true,
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"declaration": true,
		"outDir": "dist",
		"allowJs": true,
		"checkJs": false,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src",
		"types": ["@testing-library/jest-dom"],
		"declarationDir": "lib"
	},
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["src/**/*"],
	"exclude": ["**/tests", "**/*.test.tsx", "**/stories"]
}
