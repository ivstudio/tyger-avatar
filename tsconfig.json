{
	"compilerOptions": {
		"target": "esnext", // Use a modern target since Babel will handle compatibility
		"lib": ["esnext", "dom"], // Use "esnext" to include all latest features
		"declaration": true, // Generate declaration files
		"declarationDir": "lib", // Output directory for declaration files
		"allowJs": true, // Allow JavaScript files
		"skipLibCheck": true, // Skip type checking of declaration files
		"esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
		"allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
		"strict": true, // Enable all strict type-checking options
		"forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
		"module": "esnext", // Enable dynamic imports
		"moduleResolution": "node", // Use Node.js module resolution strategy
		"resolveJsonModule": true, // Include modules imported with .json extension
		"isolatedModules": true, // Ensure each file can be safely transpiled without relying on other files
		"noEmit": true, // Do not emit output files, Babel will handle this
		"jsx": "react" // Use React JSX transform
	},
	"include": ["src"], // Include all files in the src directory
	"exclude": ["node_modules", "lib", "src/stories"] // Exclude node_modules, output directory, and stories
}
